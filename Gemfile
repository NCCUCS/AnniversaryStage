source 'https://rubygems.org'

# Rails
gem 'rails', '3.2.2'

# Databases
gem 'pg'

# Heroku
gem 'heroku'

# App server
gem 'unicorn'
gem 'foreman'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  # See https://github.com/sstephenson/execjs#readme for more supported runtimes
  gem 'therubyracer'

  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

# File upload
gem 'carrierwave'
gem 'fog'
gem 'mini_magick'

# User Authentication
gem 'devise'

# Pagination
gem "kaminari"

# Facebook
gem 'koala'

# Admin
gem 'activeadmin'

# To use Jbuilder templates for JSON
# gem 'jbuilder'
